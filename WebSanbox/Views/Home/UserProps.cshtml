@using Jerboa.Identity.Data.Models
@model ApplicationUser
@{ ViewBag.Title = "UserProps";}
<div class=" panel panel-primary">
    <div class=" panel-heading"> Custom User Properties </div>
    <table class=" table table-striped">
        <tr>
            <th> City </th> 
            <td>@Model.City</td>
            <td>@Model.Country</td>
        </tr>
    </table>
</div>
@using (Html.BeginForm())
{ 
    <div class=" form-group">
        <label>City</label> @Html.DropDownListFor(x => x.City, new SelectList(Enum.GetNames(typeof(ApplicationUser.Cities)))) 
    </div>
    <button class=" btn btn-primary" type="submit"> Save </button> 
}
